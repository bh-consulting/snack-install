<VirtualHost *:80>
    ServerName {{projectname}}
    RewriteEngine On
    RewriteCond %{HTTPS} off
    RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} 
</VirtualHost>

<VirtualHost *:443>
    ServerName {{projectname}}
    DocumentRoot /home/{{projectname}}/interface
    SSLEngine On
    SSLCertificateFile /home/{{projectname}}/cert/apache.pem
    SSLCertificateKeyFile /home/{{projectname}}/cert/apache.key
    RewriteEngine On
</VirtualHost>

